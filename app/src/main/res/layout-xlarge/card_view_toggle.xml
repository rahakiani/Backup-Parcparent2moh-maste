<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewAppLock"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="6dp"
        android:alpha=".8"
        app:cardBackgroundColor="#50DFEF"
        android:background="#50DFEF"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_marginVertical="50dp"

            >

            <Switch
                android:id="@+id/togAppLock"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:textOff="Unlock"
                android:textOn="Lock"
                android:textColor="#FFFF"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                app:layout_marginLeftPercent="5%" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAppName"
                android:text="AppName"
                android:layout_centerVertical="true"
                android:textSize="27sp"
                android:layout_toRightOf="@+id/togAppLock"
                android:layout_gravity="center_vertical"
                app:layout_marginLeftPercent="20%"
                android:layout_marginLeft="10dp"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/edtStartTime"
                    android:hint="Start"
                    android:textSize="27dp"
                    android:textColorHint="#FFF"
                    android:textAlignment="center"
                    android:visibility="gone"/>


                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/edtFinishTime"
                    android:hint="Finish"
                    android:textColorHint="#FFF"
                    android:textSize="27dp"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
