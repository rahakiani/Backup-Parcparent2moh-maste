<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardViewAppLock"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="6dp"
        android:alpha=".8"
        app:cardBackgroundColor="#50DFEF"
        android:background="#50DFEF"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <Switch
                android:id="@+id/togAppLock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textOff="Unlock"
                android:textOn="Lock"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAppName"
                android:text="AppName"
                android:layout_centerVertical="true"
                android:textSize="9sp"
                android:layout_toRightOf="@+id/togAppLock"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true">

                <EditText
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/edtStartTime"
                    android:hint="Start"
                    android:textSize="9sp"
                    android:textAlignment="center"
                    android:visibility="gone"/>


                <EditText
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/edtFinishTime"
                    android:hint="Finish"
                    android:textSize="9sp"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
