<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact_uss"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Contact_us">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:text="Please send your criticisms and suggestions \n to the following email address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDKIDS@PROTONMAIL.COM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:layout_marginTop="20sp"
        android:background="@drawable/customborder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thank you for your kindness"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:fontFamily="@font/baby"
        android:layout_marginTop="25dp" />


</LinearLayout>